{
  "name": "@akameco/sum",
  "version": "0.1.0",
  "description": "sum",
  "license": "MIT",
  "repository": "akameco/sum",
  "author": "akameco <akameco.t@gmail.com> (akameco.github.io)",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "add-contributor": "all-contributors add",
    "fmt": "prettier --write '**/*.{ts,js,json,md}'",
    "type-check": "tsc --noEmit",
    "build": "yarn build:types && yarn build:js",
    "build:js": "NODE_ENV=production babel src -d lib --extensions '.ts,.tsx'  --source-maps inline",
    "build:types": "tsc --emitDeclarationOnly",
    "test": "jest",
    "test:ci": "jest --coverage --ci --runInBand src"
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "tsc --noEmit",
      "git add"
    ]
  },
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@types/jest": "^23.3.9",
    "all-contributors-cli": "^5.4.1",
    "babel-preset-zero": "^0.6.2",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.4",
    "prettier": "^1.14.3",
    "ts-jest": "^23.10.4",
    "typescript": "^3.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
